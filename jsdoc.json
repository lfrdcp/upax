{
  "plugins": ["plugins/markdown", "plugins/summarize", "jsdoc-mermaid"],
  "source": {
    "include": ["src"],
    "includePattern": ".\\.(js|jsx)$",
    "excludePattern": "(node_modules|docs)"
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "recurse": true,
    "destination": "./docs",
    "template": "node_modules/clean-jsdoc-theme"
    //  "template": "node_modules/docdash"
  }
}
